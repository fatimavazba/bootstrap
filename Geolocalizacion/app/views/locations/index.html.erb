<p id="notice"><%= notice %></p>

<h1>Lista de Localizaciones</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Dirección</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to 'Mostrar', location,class:'btn btn-success' %></td>
        <td><%= link_to 'Editar', edit_location_path(location), class:'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', location,class:'btn btn-danger', method: :delete, data: { confirm: '¿Realmente desea eliminar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Localización', new_location_path,  class:'btn btn-info' %>
